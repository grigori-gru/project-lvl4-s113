include ../mixins/forms.pug
doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/vendor.js')
    script(src='/assets/application.js')
  body
    nav.navbar.navbar-toggleable-md.navbar-inverse.bg-inverse
      a.navbar-brand(href="/") Main Page
      navbarNav.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.nav-item
            a.nav-link(href=urlFor('users')) Users
          if signedId
            li.nav-item
              a.nav-link(href=urlFor('tasks')) Tasks
            li.nav-item  
              a.nav-link(href=urlFor('sessions') data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSessions')) Sign In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) Sign Up
  .container
    - const msg = flash.get()
    if msg
      .alert(class=`alert-${msg.type}`)
        = msg.text
    block content
