extends ../layouts/layout.pug

block content
  if tasks.length > 0
      table.table
        tr
          th Name
          th Actions
        for task in tasks
          tr
            td
              a(href=`/tasks/${task.id}`)= task.name
              td
                if signedId == task.id 
                  a.btn.btn-link.active(href=`/tasks/${task.id}/edit`, role='button') Edit
                  a.form(data-confirm=`Are you sure you want to delete ${task.firstName}?`).btn.btn-link.active(href=`/tasks/${task.id}?_method=DELETE` method='post') Delete
                else    
                  button.btn.btn-link(type='button', disabled='') Edit
                  button.btn.btn-link(type='button', disabled='') Delete
  else
    .alert.alert-info(role='alert')
      | There is no any task...
  a.btn.btn-primary.btn-lg.active(href='/tasks/new', role='button', aria-pressed='true') Create task
